<%- include('components/header', { title: 'Sign Up' , user }) %>
    <style>
        #otp-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }


        .modal-content {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 300px;
            text-align: center;
        }

        /* Input field styling */
        #otp {
            width: 80%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
            text-align: center;
        }

        /* Button styling */
        button {
            width: 48%;
            padding: 10px;
            margin: 5px;
            border: none;
            border-radius: 5px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #007BFF;
            color: white;
        }

        #submit-otp {
            background-color: #4CAF50;
            /* Soft green */
            color: white;
        }

        #submit-otp:hover {
            background-color: #45a049;
            /* Slightly darker green on hover */
        }

        /* Resend OTP button - professional blue */
        #resend-otp {
            background-color: #007BFF;

            color: white;
        }

        #resend-otp:hover {
            background-color: #0056b3;

        }


        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        #otp-modal {
            animation: fadeIn 0.3s ease-out;
        }
    </style>

    <div class="form-container">
        <h2>Sign Up</h2>
        <p id="error" class="error" style="color: red;"></p>
        <%- include('components/spinner') %>
            <form id="signup-form">
                <input type="text" name="name" placeholder="Name" class="text-main" required />
                <input type="email" name="email" placeholder="Email" class="text-main" required />
                <input type="password" name="password" placeholder="Password" class="text-main" required />
                <button type="submit" class="btn-primary">üìù Create Account</button>
            </form>

            <p>Already have an account? <a href="/login" class="text-main">Log In</a></p>
    </div>

    <!-- OTP Modal -->
    <div id="otp-modal" class="modal">
        <div class="modal-content">
            <h4>Enter OTP</h4>
            <input type="text" id="otp" placeholder="Enter 6-digit OTP" maxlength="6" />
            <button id="submit-otp" class="btn waves-effect waves-light">Submit OTP</button>
            <button id="resend-otp" class="btn waves-effect waves-light">Resend OTP</button>
        </div>
    </div>


    <!-- Page-specific JS -->
    <script src="/js/signup.js"></script>

    <%- include('components/footer') %>